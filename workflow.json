        "jsCode": "\nconst input = $input.first().json;\nlet rawText = \"\";\n\nif (input.content && input.content.parts && input.content.parts[0]) {\n  rawText = input.content.parts[0].text;\n} else if (input.text) {\n  rawText = input.text;\n} else {\n  rawText = JSON.stringify(input);\n}\n\nconst jsonMatch = rawText.match(/\\{[\\s\\S]*\\}/);\nlet parsed = {};\n\nif (jsonMatch) {\n  try {\n    const cleanJson = jsonMatch[0].replace(/\\\\n/g, ' ').trim();\n    parsed = JSON.parse(cleanJson);\n  } catch (e) {\n    parsed = { \n      summary: \"Parsing failed: JSON was likely cut off\", \n      follow_up: \"Check AI token limits\" \n    };\n  }\n}\n\nconst webhook = $(\"Webhook-Local\").first().json;\nconst body = webhook.body || webhook;\n\nreturn [{\n  json: {\n    summary: parsed.summary || \"Summary key not found\",\n    follow_up: parsed.follow_up || \"Follow-up key not found\",\n    company: body.company || \"Unknown\",\n    role: body.role || \"Unknown\",\n    email: body.email || \"Unknown\",\n    date: new Date().toLocaleDateString()\n  }\n}];"
